<div class="top-row pl-3 navbar navbar-dark">
    
    <span @onclick="InvokeToggleSideBar" class="sidebar-toggler pl-3 oi oi-menu"></span>
   
    <a class="navbar-brand" href="">Blackstone Blazor</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-grid-three-up" aria-hidden="true"></span> Arena
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="enemies" Match="NavLinkMatch.All">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Enemies
            </NavLink>
        </li>
    </ul>
</div>

@code {

    [Parameter]
    public EventCallback<MouseEventArgs> ToggleSideBar { get; set; }

    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    public async Task InvokeToggleSideBar(MouseEventArgs args)
    {
        await ToggleSideBar.InvokeAsync(args);
    }
}
