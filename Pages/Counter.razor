@page "/counter"
@inherits CounterPageComponent
@using BlazorApp.Pages
<div class="container">
    <div class="myRow">
        <div class="col-5">
            <button class="btn btn-primary" @onclick="Dice.RollDice">Roll Dice</button>
        </div>
        <div class="col-3">
            <p>Result @Dice.From</p>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-9">
            <EditForm Model="Names">
                @foreach (var nameForm in Names)
                {
                    <div class="form-group">
                        <label>@nameForm.Name</label>
                        <InputText class="form-control" @bind-Value="nameForm.Name" />
                    </div>
                    <div class="form-group form-check">
                        <InputCheckbox class="form-check-input" type="checkbox" @bind-Value="nameForm.Attending" />
                        <label class="form-check-label">Attending?</label>
                    </div>
                }
            </EditForm>
        </div>
        <div class="col-3">
            <h2>Changes</h2>
            <div class="list-group">
                @foreach (var nameForm in Names)
                {
                    <div class="list-group-item">
                        @nameForm.Name <p>Is attending @nameForm.Attending </p>
                    </div>

                }
            </div>
        </div>
    </div>
</div>